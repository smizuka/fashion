<div class="row">
    <div class="col-10 offset-1">
        <div class="row">
            <div class="col-4 offset-4 mt-5">
                <%= form_for :session, url: login_path do |f| %>
                    <div class="form-group">
                      <%= f.label :"ログインID", class: 'text-primary' %>
                      <%= f.text_field :login_id, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :"旧パスワード", class: 'text-primary' %>
                      <%= f.password_field :password1, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :"新パスワード", class: 'text-primary' %>
                      <%= f.password_field :password2, class: 'form-control' %>
                    </div>
                    <div class="row">
                      <div class="col-4 mx-auto mt-3">
                          <%= f.submit '更新', class: 'btn btn-primary' %>
                      </div>
                    </div>


                    <div class="row">
                      <div class="col4 offset-4 mt-3">
                        <% if current_user.user_type=="admin" %>
                            <%= link_to("トップに戻る", admins_main_path, {class: "text-primary"}) %>
                        <% else %>
                            <%= link_to("トップに戻る", works_main_path, {class: "text-primary"}) %>
                        <% end %>
                      </div>
                    </div>

                <% end %>
            </div>
        </div>
    </div>
</div>
